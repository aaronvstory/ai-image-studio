# Port Configuration
PORT=3500

# Authentication Settings
# Set AUTH_REQUIRED to false to allow unlimited generation without login
NEXT_PUBLIC_AUTH_REQUIRED=false

# Demo Mode - Legacy flag (deprecated, use AUTH_REQUIRED instead)
NEXT_PUBLIC_DEMO_MODE=false

# OpenAI API Configuration
# Get your key from: https://platform.openai.com/api-keys
# Required for DALL-E 3 image generation
# Costs: $0.04 per standard image, $0.08 per HD image
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_API_KEY_HERE

# Gemini API Configuration  
# Get your key from: https://aistudio.google.com/app/apikey
# Note: Gemini 2.5 Flash doesn't generate images, only analyzes them
GEMINI_API_KEY=AIzaSy_YOUR_GEMINI_API_KEY_HERE

# Supabase Configuration (Required for authentication)
# Get from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ_YOUR_ANON_KEY_HERE
SUPABASE_SERVICE_ROLE_KEY=eyJ_YOUR_SERVICE_ROLE_KEY_HERE

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=30
